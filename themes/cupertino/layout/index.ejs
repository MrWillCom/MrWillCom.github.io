<div class="container">
    <% if (page.path == "index.html") { %>
    <div class="hero">
        <div class="group">
            <h2 class="sub"><%= config.subtitle %></h2>
            <h2 class="large"><%= config.description %></h2>
        </div>
    </div>
    <% } %>

    <div class="post-list">
        <% page.posts.each(function (post) { %>
        <article class="post-list-item">
            <div class="cover-img">
                <img src="<%= post.cover_image %>" alt="<%= post.cover_image_alt %>">
            </div>
            <div class="content">
                <div class="title">
                    <a href="<%- url_for(post.path) %>" target="_blank"><%= post.title %></a>
                </div>
                <div class="excerpt">
                    <%- post.excerpt %>
                </div>
                <div class="time">
                    <% if (post.date.month() == 0) { %>
                    <span>January</span>
                    <% } %>
                    <% if (post.date.month() == 1) { %>
                    <span>February</span>
                    <% } %>
                    <% if (post.date.month() == 2) { %>
                    <span>March</span>
                    <% } %>
                    <% if (post.date.month() == 3) { %>
                    <span>April</span>
                    <% } %>
                    <% if (post.date.month() == 4) { %>
                    <span>May</span>
                    <% } %>
                    <% if (post.date.month() == 5) { %>
                    <span>June</span>
                    <% } %>
                    <% if (post.date.month() == 6) { %>
                    <span>July</span>
                    <% } %>
                    <% if (post.date.month() == 7) { %>
                    <span>August</span>
                    <% } %>
                    <% if (post.date.month() == 8) { %>
                    <span>September</span>
                    <% } %>
                    <% if (post.date.month() == 9) { %>
                    <span>October</span>
                    <% } %>
                    <% if (post.date.month() == 10) { %>
                    <span>November</span>
                    <% } %>
                    <% if (post.date.month() == 11) { %>
                    <span>December</span>
                    <% } %>
                    <span><%- post.date.date() %>,</span>
                    <span><%- post.date.year() %></span>
                </div>
                <div class="read-more">
                    <button onclick="window.open('<%- url_for(post.path) %>')"><%= __('read_more') %></button>
                </div>
            </div>
        </article>
        <% }) %>
    </div>

    <%- partial('_partial/paginator') %>
</div>